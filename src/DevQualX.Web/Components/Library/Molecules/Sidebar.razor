@namespace DevQualX.Web.Components.Library.Molecules
@using DevQualX.Web.Components.Library.Atoms
@using Microsoft.AspNetCore.Components.Routing
@implements IDisposable

<div class="sidebar @(IsExpanded ? "sidebar--expanded" : "") @Class" data-sidebar @attributes="AdditionalAttributes">
    @* Mobile hamburger button *@
    <button 
        type="button" 
        class="sidebar__hamburger"
        data-sidebar-toggle
        aria-label="Open menu"
        aria-expanded="false">
        <Icon Name="@HeroIcon.Bars3" />
    </button>
    
    @* Mobile overlay *@
    <div class="sidebar__overlay" data-sidebar-overlay></div>
    
    @* Sidebar content *@
    <div class="sidebar__content">
        @* Logo and title *@
        <a href="/" class="sidebar__header">
            <div class="sidebar__logo">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="sidebar__logo-icon">
                    <path d="M11.7 2.805a.75.75 0 01.6 0A60.65 60.65 0 0122.83 8.72a.75.75 0 01-.231 1.337 49.949 49.949 0 00-9.902 3.912l-.003.002-.34.18a.75.75 0 01-.707 0A50.009 50.009 0 007.5 12.174v-.224c0-.131.067-.248.172-.311a54.614 54.614 0 014.653-2.52.75.75 0 00-.65-1.352 56.129 56.129 0 00-4.78 2.589 1.858 1.858 0 00-.859 1.228 49.803 49.803 0 00-4.634-1.527.75.75 0 01-.231-1.337A60.653 60.653 0 0111.7 2.805z" />
                    <path d="M13.06 15.473a48.45 48.45 0 017.666-3.282c.134 1.414.22 2.843.255 4.285a.75.75 0 01-.46.71 47.878 47.878 0 00-8.105 4.342.75.75 0 01-.832 0 47.877 47.877 0 00-8.104-4.342.75.75 0 01-.461-.71c.035-1.442.121-2.87.255-4.286A48.4 48.4 0 016 13.18v1.27a1.5 1.5 0 00-.14 2.508c-.09.38-.222.753-.397 1.11.452.213.901.434 1.346.661a6.729 6.729 0 00.551-1.608 1.5 1.5 0 00.14-2.67v-.645a48.549 48.549 0 013.44 1.668 2.25 2.25 0 002.12 0z" />
                    <path d="M4.462 19.462c.42-.419.753-.89 1-1.394.453.213.902.434 1.347.661a6.743 6.743 0 01-1.286 1.794.75.75 0 11-1.06-1.06z" />
                </svg>
            </div>
            <span class="sidebar__title">@Title</span>
        </a>
        
        @* Navigation tree *@
        <nav class="sidebar__nav">
            @foreach (var item in FilteredNavItems)
            {
                <SidebarNavItem 
                    Item="@item" 
                    CurrentPath="@CurrentPath" />
            }
        </nav>
    </div>
</div>

@code {
    private string _currentPath = string.Empty;
    
    /// <summary>
    /// Navigation items to display in the sidebar.
    /// </summary>
    [Parameter, EditorRequired]
    public required List<NavItem> NavItems { get; set; }
    
    /// <summary>
    /// Application title to display in the header.
    /// </summary>
    [Parameter]
    public string Title { get; set; } = "DevQualX";
    
    /// <summary>
    /// Whether the sidebar is expanded (for future collapsible sidebar feature).
    /// </summary>
    [Parameter]
    public bool IsExpanded { get; set; } = true;
    
    /// <summary>
    /// Additional CSS classes to apply to the sidebar.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }
    
    /// <summary>
    /// Additional HTML attributes to apply to the sidebar.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }
    
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;
    [Inject] private IWebHostEnvironment Environment { get; set; } = default!;
    
    private string CurrentPath => _currentPath;
    
    private List<NavItem> FilteredNavItems => NavItems
        .Where(item => !item.DevOnly || Environment.IsDevelopment())
        .ToList();
    
    protected override void OnInitialized()
    {
        _currentPath = GetRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }
    
    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        _currentPath = GetRelativePath(e.Location);
        StateHasChanged();
    }
    
    private string GetRelativePath(string uri)
    {
        var baseUri = NavigationManager.BaseUri;
        if (uri.StartsWith(baseUri))
        {
            return uri.Substring(baseUri.Length);
        }
        return uri;
    }
    
    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
