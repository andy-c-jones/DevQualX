@namespace DevQualX.Web.Components.Library.Atoms

<span class="badge badge--@Variant.ToString().ToLowerInvariant() @(ShowDot ? "badge--with-dot" : "") @Class" @attributes="AdditionalAttributes">
    @if (ShowDot)
    {
        <span class="badge__dot" aria-hidden="true"></span>
    }
    @ChildContent
</span>

@code {
    /// <summary>
    /// Badge content.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    /// <summary>
    /// Badge style variant (Default, Primary, Success, Danger, Warning, Info).
    /// </summary>
    [Parameter]
    public BadgeVariant Variant { get; set; } = BadgeVariant.Default;
    
    /// <summary>
    /// Whether to show a dot indicator before the badge text.
    /// </summary>
    [Parameter]
    public bool ShowDot { get; set; }
    
    /// <summary>
    /// Additional CSS classes to apply to the badge.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }
    
    /// <summary>
    /// Additional HTML attributes to apply to the badge.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }
}
