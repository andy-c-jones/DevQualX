@page "/auth/access-denied"

<PageTitle>Access Denied - DevQualX</PageTitle>

<div class="access-denied-container">
    <div class="access-denied-card">
        <svg class="error-icon" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <circle cx="12" cy="12" r="10" stroke-width="2"/>
            <line x1="15" y1="9" x2="9" y2="15" stroke-width="2"/>
            <line x1="9" y1="9" x2="15" y2="15" stroke-width="2"/>
        </svg>
        
        <h1>Access Denied</h1>
        <p class="message">
            You don't have permission to access this resource.
        </p>
        
        <div class="actions">
            <a href="/" class="btn btn-primary">Go to Home</a>
            <a href="/auth/select-org" class="btn btn-secondary">Switch Organization</a>
        </div>
        
        <div class="help-text">
            <p>If you believe you should have access to this resource:</p>
            <ul>
                <li>Make sure you've selected the correct organization</li>
                <li>Contact your organization administrator to grant you the necessary permissions</li>
                <li>Verify that the DevQualX GitHub App is installed on your organization</li>
            </ul>
        </div>
    </div>
</div>

